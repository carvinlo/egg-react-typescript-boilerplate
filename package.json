{
	"name": "egg-react-typescript-boilerplate",
	"version": "2.1.0",
	"description": "基于 egg + react + typescript + webpack 服务端渲染工程骨架项目",
	"scripts": {
		"start": "egg-scripts start",
		"dev": "egg-bin dev -r 'egg-ts-helper/register'",
		"debug": "egg-bin debug",
		"tsc": "ets && tsc -p tsconfig.json",
		"clean": "ets clean",
		"kill": "easy kill",
		"build": "easywebpack build prod",
		"build:dev": "easywebpack build dev",
		"build:test": "easywebpack build test",
		"build:prod": "easywebpack build prod",
		"lint": "tslint --project . -c tslint.json",
		"fix": "tslint --fix --project . -c tslint.json",
		"ii": "npm install --registry https://registry.npm.taobao.org",
		"precommit": "lint-staged",
		"prettier": "prettier --write 'config/**/*.ts' 'app/**/*.ts' 'tests/**/*.ts'"
	},
	"dependencies": {
		"babel-loader": "^7.1.2",
		"cache-loader": "^1.2.2",
		"css-loader": "^0.28.4",
		"eslint-loader": "^2.0.0",
		"file-loader": "^1.1.10",
		"isomorphic-style-loader": "^4.0.0",
		"postcss-loader": "^2.1.0",
		"react-hot-loader": "^4.3.4",
		"style-loader": "^0.18.2",
		"thread-loader": "^1.1.5",
		"url-loader": "^0.5.8",
		"cross-env": "^5.0.0",
		"egg": "^2.1.0",
		"egg-cors": "^2.0.0",
		"egg-logger": "^1.5.0",
		"egg-scripts": "^2.6.0",
		"egg-validate": "^1.0.0",
		"extend": "~3.0.0",
		"history": "^4.7.2",
		"husky": "^0.14.3",
		"lint-staged": "^7.2.0",
		"lodash": "^4.17.4",
		"mockjs": "^1.0.1-beta3",
		"moment": "^2.17.1",
		"prettier": "^1.14.0",
		"react": "^16.0.0",
		"react-dom": "^16.0.0",
		"react-redux": "^5.0.6",
		"react-router": "^4.2.0",
		"react-router-config": "^1.0.0-beta.4",
		"react-router-dom": "^4.2.2",
		"react-router-redux": "^4.0.8",
		"redux": "^3.7.2",
		"tslint-plugin-prettier": "^1.3.0"
	},
	"devDependencies": {
		"@types/react": "^16.0.34",
		"@types/react-dom": "^16.0.3",
		"antd": "^3.0.3",
		"autod-egg": "^1.0.0",
		"autoprefixer": "^7.1.4",
		"babel-plugin-add-module-exports": "^0.2.1",
		"babel-plugin-import": "^1.4.0",
		"babel-plugin-syntax-dynamic-import": "^6.18.0",
		"babel-plugin-transform-object-assign": "^6.22.0",
		"babel-plugin-transform-object-rest-spread": "^6.26.0",
		"babel-preset-env": "^1.6.0",
		"babel-preset-react": "^6.24.1",
		"egg-bin": "^4.7.1",
		"egg-ts-helper": "^1.9.0",
		"eslint": "^4.6.1",
		"eslint-config-egg": "^5.1.1",
		"eslint-plugin-react": "^7.1.0",
		"history": "^4.7.2",
		"ip": "^1.1.5",
		"less": "^2.7.2",
		"less-loader": "^4.0.5",
		"node-sass": "^4.6.0",
		"sass-loader": "^6.0.6",
		"stylus": "^0.54.5",
		"stylus-loader": "^3.0.1",
		"ts-loader": "^4.0.0",
		"tslint": "^5.9.1",
		"tslint-loader": "^3.5.3",
		"typescript": "^2.6.2",
		"uglifyjs-webpack-plugin": "^1.1.2",
		"vconsole": "^3.0.0"
	},
	"egg": {
		"typescript": true
	},
	"license": "MIT",
	"lint-staged": {
		"*.{ts,tsx}": [
			"prettier --write",
			"git add"
		]
	},
	"prettier": {
		"singleQuote": true,
		"tabWidth": 4,
		"useTabs": true,
		"printWidth": 120,
		"arrowParens": "avoid",
		"bracketSpacing": true,
		"jsxBracketSameLine": false,
		"semi": true,
		"trailingComma": "none"
	}
}
